{
  "manifest_version": 3,
  "name": "Striver CP Sheet Tracker",
  "version": "1.0",
  "description": "Marks solved Codeforces problems and shows ratings on Striver's sheet.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://codeforces.com/api/*",
    "https://takeuforward.org/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://takeuforward.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}